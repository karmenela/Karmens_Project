say=int(input("Harshad sayı olup olmadığına bakmak için bir sayı giriniz:"))

def harshadmi(sayi):
    toplam=0
    for eleman in str(sayi):
       toplam=toplam+int(eleman)
    return sayi%toplam==0


if harshadmi(say):
    print(f"{say} harshad sayısıdır.")
else:
    print(f"{say} harshad sayısı değildir.")
